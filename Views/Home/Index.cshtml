@model List<BookingRIo.Models.Apartment>

<body style="background-image: url(/assets/media/bg-image.jpg);">
    <main>
        <section id="page-title">
            <h3>Be My Guest</h3>
            <h1>Welcome to Rio</h1>
        </section>

        <section id="apartments">
            <div class="container">
                <div class="row">
                    @foreach (var apartment in Model)
                    {
                        <div class="col-md-4">
                            <div class="card">
                                <img src="@(string.IsNullOrEmpty(apartment.ImagePath) ? "/assets/media/default.jpg" : apartment.ImagePath)" class="card-img-top" alt="Apartment Image">
                                <div class="card-body">
                                    <h5 class="card-title">@apartment.RoomNumber</h5>
                                    <p class="card-text">@apartment.RoomType</p>
                                    <p class="card-text"><strong>Price:</strong> $@apartment.Amount</p>
                                    <a href="#" class="btn btn-primary">Book Now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </main>

    <div style="position: absolute; top: 20px; left: 20px; background-color: rgba(0, 0, 0, 0.5); color: white; padding: 10px;">
        <p>Welcome, @ViewBag.UserName!</p>
        <p>Your role: @ViewBag.UserRole</p>
    </div>

    <script src="https://kit.fontawesome.com/fad17f25d7.js" crossorigin="anonymous"></script>
    <script src="assets/JS/main.js"></script>
</body>
