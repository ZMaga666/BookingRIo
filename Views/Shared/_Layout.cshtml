
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/assets/media/favicon.png">
    <title>Rio Apartments</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="~/assets/css/lightslider.css">
    <link rel="stylesheet" href="~/assets/css/material_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="~/assets/JS/jquery-ui-1.13.1.custom/jquery-ui.min.css" rel="stylesheet" />
    @* <link href="~/assets/plugins/sweet-alert/sweetalert.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" /> *@
    <script src="~/assets/js/pages/sweet-alert/sweet-alert-data.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @* <script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script> *@
    <link rel="stylesheet" href="~/assets/css/style.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/grid.css" asp-append-version="true">

</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a asp-controller="OurApartment" asp-action="Index">Our Apartment</a>
                        </li>
                        <li>
                            <a asp-controller="Rio" asp-action="Index">Rio</a>
                        </li>
                        <li>
                            <a asp-controller="Contact" asp-action="Index">Contact </a>
                        </li>
                        <li>
                            <a asp-controller="Dashboard" asp-action="Index">Dashboard </a>
                        </li>
                            


                    </ul>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-10">
                    <div class="row">
                        <div class="col-4">
                            <div class="contact">
                                <h1>
                                    <a asp-controller="Contact" asp-action="Index">
                                        Contact Us
                                    </a>
                                </h1>
                                <div class="seperator">
                                    <div></div>
                                </div>
                                <p>
                                    Ask us anything! We’re here to <br>
                                    answer any questions you have.
                                </p>
                                <span>Email:</span> <a href="mailto:info@mysite.com">info@mysite.com</a>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="follow">
                                <h1>
                                    Follow Us
                                </h1>
                                <div class="seperator">
                                    <div></div>
                                </div>
                                <ul class="social">
                                    <li>
                                        <a href="http://www.twitter.com">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="http://www.facebook.com">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>

                                    </li>
                                    <li>
                                        <a href="http://www.instagram.com">
                                            <i class="fab fa-instagram"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="subscribe">
                                <h1>Subscribe for Updates & Offers</h1>
                                <div class="seperator">
                                    <div>
                                    </div>
                                </div>
                                @using (Html.BeginForm("Subscribe", "Contact", FormMethod.Post, new { id = "subscribeForm" }))
                                {
                                    <input name="email" type="email" placeholder="Enter your email here" req>
                                    <button type="submit">Subscribe Now</button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="copyright">
                        <p>
                            © Be my guest in Rio. Proudly created with <a href="wix.com">Wix.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/assets/JS/lightslider.js"></script>
    <script src="/assets/JS/main.js"></script>

    <script>
        $(document).ready(function () {
            $('#subscribeForm').on('submit', function (e) {
                e.preventDefault(); // Prevent the default form submission behavior
                var formData = $(this).serialize(); // Serialize the form data

                $.ajax({
                    type: 'POST',
                    url: $(this).attr('action'), // Dynamically gets the action URL from the form
                    data: formData,
                    success: function (response) {
                        // Handle response here
                        alert('Message: ' + response.message);
                    },
                    error: function () {
                        // Handle error here
                        alert('Error processing your request.');
                    }
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            var message = '@Html.Raw(ViewBag.Message)';
            if (message) {
                alert(message);
            }
        });

    </script>


</body>
</html>