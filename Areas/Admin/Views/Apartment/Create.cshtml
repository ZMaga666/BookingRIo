@model BookingRIo.Models.Apartment

<h2>Create Room</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomType" class="control-label">Room Type</label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Price</label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Empty">Empty</option>
            <option value="Occupied">Occupied</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Upload Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
