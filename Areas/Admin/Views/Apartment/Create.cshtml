@model BookingRIo.Models.Apartment

<h2>Create Room</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="RoomNumber"  class="control-label" >Room number</label>
        <input class="form-control" name="RoomNumber" value="@Model.RoomNumber" />

    </div>

    <div class="form-group">
        <label for="RoomType"  class="control-label">Room type</label>
        <input class="form-control" name="RoomType" value="@Model.RoomType" />
    </div>

    <div class="form-group">
        <label for="Price" class="control-label">Price</label>
        <input name="Price" class="form-control" type="number" step="0.01" value="@Model.Price" />
    </div>

@*     <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Empty">Empty</option>
            <option value="Occupied">Occupied</option>
        </select>
    </div> *@

    <div class="form-group mt-3">
        <button type="submit"  class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

