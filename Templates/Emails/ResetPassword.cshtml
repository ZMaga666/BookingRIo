@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<form asp-controller="Auth" asp-action="ResetPassword" method="post">
    <input type="hidden" name="token" value="@Context.Request.Query["token"]" />
    <input type="hidden" name="email" value="@Context.Request.Query["email"]" />

    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Reset Password</button>
</form>
